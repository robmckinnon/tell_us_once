%p
  %label{:for => "submitter_postcode"} Your postcode *
  = f.text_field :postcode
  = span_error_message_on(submitter, :postcode)
%p
  %label{:for => "submitter_email"} Your email *
  = f.text_field :email
  = span_error_message_on(submitter, :email)
