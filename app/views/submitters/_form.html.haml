  %label{:for => "submitter_first_name"} Your first name(s) *
  = f.text_field :first_name
  = span_error_message_on(submitter, :first_name)
%p
  %label{:for => "submitter_family_name"} Your family name *
  = f.text_field :family_name
  = span_error_message_on(submitter, :family_name)
