%h1 Listing death_notifications

%table
  %tr
    %th Submitter
    %th Relationship to deceased
    %th Deceased first name
    %th Deceased family name
    %th Deceased maiden surname
    %th Date of death
    %th Date of birth
    %th Place of birth
    %th National insurance number
    %th Tax reference number
    %th Nhs number
